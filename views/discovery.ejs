<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Discovered Devices</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
    <h2>Discovered Devices</h2>
    <div class="list-group">
        <% if (devices && devices.length > 0) { %>
            <% devices.forEach(function(device) { %>
                <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1"><%= device.modelName %></h5> <!-- Assuming modelName represents the device name -->
                    </div>
                    <p class="mb-1">Device ID: <%= device.externalDeviceId %></p>
                    <small>Manufacturer: <%= device.manufacturerName %></small>
                    <br>
                    <small>Current State: <%= device.state ? device.state : 'Unknown' %></small> <!-- Example addition -->
                </a>
            <% }); %>
        <% } else { %>
            <p class="text-muted">No devices found.</p>
        <% } %>
    </div>
</div>
</body>
</html>
